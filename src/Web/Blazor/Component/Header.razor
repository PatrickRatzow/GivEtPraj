<header>
    <span class="flex flex-row items-center text-gray-800 text-md">
        @if (Icon is not null)
        {
            <i class="@Icon mr-2"></i>
        }
        <h1>@Title</h1>
    </span>
</header>

@code {
    [Parameter] 
    public string Title { get; set; } = "Title";
    [Parameter]
    public string? Icon { get; set; }
}