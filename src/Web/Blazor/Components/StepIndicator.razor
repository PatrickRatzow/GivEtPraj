    <div class="flex justify-center fixed bottom-0 left-0 right-0 ml-auto mr-auto w-auto mb-4 z-10">
    @for (var i = 0; i < Steps; i++)
    {
        <span id="step-@i" class="rounded-full transition-all ease-out w-2 h-2 mr-1 @(CurrentStep == i ? "bg-orange w-12" : "bg-gray-step")"></span>
